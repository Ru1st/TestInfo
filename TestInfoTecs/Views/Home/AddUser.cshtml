@model TestInfoTecs.Models.User
    @{
        Layout = "~/Views/Shared/_Layout.cshtml";
        ViewBag.Title = "Добавить пользователя";
    }
<h2>Добавить пользователя</h2>
<div>
    @using (Html.BeginForm("AddUser", "Home", FormMethod.Post))
    {
        @Html.LabelFor(model => model.Name, "Имя пользователя")<br />
        @Html.TextBoxFor(model => model.Name)
        @Html.ValidationMessageFor(model => model.Name)
        <br /><br />
        @Html.LabelFor(model => model.SecondName, "Фамилия пользователя")<br />
        @Html.TextBoxFor(model => model.SecondName)
        @Html.ValidationMessageFor(model => model.SecondName)
        <br /><br />
        @Html.HiddenFor(model => model.CitiesId, new { id = "cityId" })
        @Html.Label("Город")<br />
        @Html.TextBox("CityName", "", new { id = "cityName" })
        @Html.ValidationMessageFor(model => model.CitiesId)
        <br /><br />
        <input type="submit" value="Добавить" />
    }
</div>
